{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always", { "omitLastInOneLineBlock": true }],
    "semi-style": ["error", "last"],
    "no-extra-semi": "error",
    "class-methods-use-this": "off",
    "no-unused-vars": "warn"
  }
}
